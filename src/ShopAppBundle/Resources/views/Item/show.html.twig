{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Item</h1>

    <table class="record_properties">
        <tbody>
            {% for item in entity %}
                <tr>
                    <th>Id</th>
                    <td>{{ item.id }}</td>
                </tr>
                <tr>
                    <th>Nazwa</th>
                    <td>{{ item.name }}</td>
                </tr>
                <tr>
                    <th>Opis</th>
                    <td>{{ item.description }}</td>
                </tr>
                <tr>
                    <th>Cena:</th>
                    <td>{{ item.price }}</td>
                </tr>
            {% endfor %}

        </tbody>
    </table>

    {% for photo in photos %}
        <img src="url('/uploads/{{ photo.path }}')"></img>
    {% endfor %}

    <ul class="record_actions">
        <li>
            <a href="{{ path('item') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('item_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>
{% endblock %}
