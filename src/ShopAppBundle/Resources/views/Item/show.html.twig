{#{% extends '::base.html.twig' %}#}
<html>
    <head>
        <title>Przedmioty</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
        <script src="/js/jquery.bxslider.min.js"></script>
        <link href="/lib/jquery.bxslider.css" rel="stylesheet" />
    </head>
    <body>
        {#        {% block body -%}#}

        <h1>Item</h1>

        <table class="record_properties">
            <tbody>
                <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Nazwa</th>
                        <td>{{ entity.name }}</td>
                    </tr>
                    <tr>
                        <th>Opis</th>
                        <td>{{ entity.description }}</td>
                    </tr>
                    <tr>
                        <th>Cena:</th>
                        <td>{{ entity.price }}</td>
                    </tr>
            </tbody>
        </table>
        <ul class="bxslider">
            {% for photo in photos %}
                <li><img src="/uploads/{{ photo.path }}" /></li>
                {% endfor %}
        </ul>
        <div id="bx-pager">
            {% for photo in photos %}
                <a data-slide-index="{{loop.index0}}" href="" style="background-image: url('/uploads/{{ photo.path }}')"> </a>
                {% endfor %}
        </div>
        
        

        <ul class="record_actions">
            <li>
                <a href="{{ path('add_to_basket', { 'id':entity.id}) }}">
                    Dodaj do koszyka
                </a>
            </li>
            <li>
                <a href="{{ path('item') }}">
                    Back to the list
                </a>
            </li>
            <li>
                <a href="{{ path('item_edit', { 'id': entity.id }) }}">
                    Edit
                </a>
            </li>
            {#        <li>{{ form(delete_form) }}</li>#}
        </ul>
        {#        {% endblock %}#}
        <script>
            $(function(){
                $('.bxslider').bxSlider({
                    pagerCustom: '#bx-pager'
                });
            });
        </script>
    </body>
</html>
