{% extends '::base.html.twig' %}
{#{{ dump(entity) }}#}
{% block body -%}
    <h1>ShopOrder</h1>
    {% if entity is not defined %}
        Brak zamówień!
        {% endif %}
    <table class="record_properties">
        {% for order in entity %}
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.status }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ order.quantity }}</td>
            </tr>
        </tbody>
        {% endfor %}
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('shoporder') }}">
            Back to the list
        </a>
    </li>
    {#<li>
        <a href="{{ path('shoporder_edit', { 'id': order.id }) }}">
            Edit
        </a>
    </li>#}
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
